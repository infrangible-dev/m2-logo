<?php /** @noinspection PhpDeprecationInspection */

declare(strict_types=1);

use Infrangible\Logo\ViewModel\Block\Html\Header\TabletLogoSizeResolver;
use Magento\Theme\Block\Html\Header\Logo;

/**
