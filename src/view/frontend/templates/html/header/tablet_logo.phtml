 * @license     http://www.opensource.org/licenses/mit-license.php MIT
 */

/** @var Logo $block */
$storeName = $block->getData('theme_name') ? $block->getData('theme_name') : $block->getLogoAlt();
/** @var TabletLogoSizeResolver $logoSizeResolver */
$logoSizeResolver = $block->getData('logo_size_resolver');

$logoWidth = $logoSizeResolver !== null && $logoSizeResolver->getWidth() ? $logoSizeResolver->getWidth() : $block->getLogoWidth();
$logoHeight = $logoSizeResolver !== null && $logoSizeResolver->getHeight() ? $logoSizeResolver->getHeight() : $block->getLogoHeight();
?>

<a class="logo tablet"
   href="<?= $block->escapeUrl($block->getUrl()) ?>"
   title="<?= $block->escapeHtmlAttr($storeName) ?>"
   aria-label="store tablet logo">
    <img src="<?= $block->escapeUrl($block->getLogoSrc()) ?>"
         title="<?= $block->escapeHtmlAttr($block->getLogoAlt()) ?>"
         alt="<?= $block->escapeHtmlAttr($block->getLogoAlt()) ?>"
        <?= $logoWidth ? 'width="' . $block->escapeHtmlAttr($logoWidth) . '"' : '' ?>
        <?= $logoHeight ? 'height="' . $block->escapeHtmlAttr($logoHeight) . '"' : '' ?>
    />
</a>
